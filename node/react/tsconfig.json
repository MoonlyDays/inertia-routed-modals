{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        /* If transpiling with TypeScript: */
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        /* AND if you're building for a library: */
        "declaration": true
    }
}
